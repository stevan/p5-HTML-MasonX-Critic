#!perl -w

# PODNAME: bin/sloop
# ABSTRACT: HTML::Mason demolition kit

use strict;
use warnings;
use FindBin;

use lib "$FindBin::Bin/../lib";

use App::Sloop;

App::Sloop->new({ show_version_cmd => 1 })->run;

1;

__END__

